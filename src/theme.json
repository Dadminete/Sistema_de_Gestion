{
  "designSystemName": "LunoAdmin Inspired",
  "description": "A design system based on a modern, clean, and data-driven administrative dashboard interface. It emphasizes clarity, modularity, and a professional yet approachable aesthetic.",
  "visualStyle": {
    "overallAesthetic": "Clean, professional, and spacious with a touch of modern vibrancy.",
    "keyPrinciples": ["Clarity through hierarchy", "Data-first visualization", "Modular component-based design", "Consistent spacing and alignment"]
  },
  "colors": {
    "primary": {
      "main": "#3B82F6",
      "light": "#60A5FA",
      "dark": "#2563EB",
      "contrastText": "#FFFFFF"
    },
    "secondary": {
      "main": "#10B981",
      "light": "#34D399",
      "dark": "#059669",
      "contrastText": "#FFFFFF"
    },
    "accent": {
      "purple": "#8B5CF6",
      "blue": "#3B82F6"
    },
    "background": {
      "default": "#F3F4F6",
      "paper": "#FFFFFF"
    },
    "text": {
      "primary": "#1F2937",
      "secondary": "#6B7280",
      "disabled": "#D1D5DB",
      "link": "#3B82F6"
    },
    "status": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    },
    "charts": {
      "barFill": ["#8B5CF6", "#A78BFA"],
      "donutFill": ["#8B5CF6", "#E5E7EB"]
    }
  },
  "typography": {
    "fontFamily": "Inter, -apple-system, BlinkMacMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
    "hierarchy": {
      "h1": {
        "fontSize": "24px",
        "fontWeight": 700,
        "letterSpacing": "-0.02em"
      },
      "h2": {
        "fontSize": "18px",
        "fontWeight": 600
      },
      "h3": {
        "fontSize": "14px",
        "fontWeight": 700,
        "textTransform": "uppercase",
        "color": "#6B7280"
      },
      "body1": {
        "fontSize": "16px",
        "fontWeight": 400
      },
      "body2": {
        "fontSize": "14px",
        "fontWeight": 400,
        "color": "#6B7280"
      },
      "caption": {
        "fontSize": "12px",
        "fontWeight": 500,
        "color": "#6B7280"
      },
      "button": {
        "fontSize": "14px",
        "fontWeight": 600
      }
    }
  },
  "layout": {
    "gridSystem": "Flexible grid, likely based on a 12-column system.",
    "spacingUnit": "8px",
    "structure": {
      "mainContainer": {
        "maxWidth": "1600px",
        "padding": "24px"
      },
      "sidebar": {
        "width": "260px",
        "backgroundColor": "#FFFFFF",
        "padding": "24px"
      },
      "header": {
        "height": "64px",
        "padding": "0 24px",
        "borderBottom": "1px solid #E5E7EB"
      }
    }
  },
  "components": {
    "card": {
      "backgroundColor": "#FFFFFF",
      "borderRadius": "12px",
      "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1)",
      "padding": "24px",
      "border": "1px solid #E5E7EB"
    },
    "button": {
      "borderRadius": "8px",
      "padding": "10px 16px",
      "variants": {
        "primary": {
          "backgroundColor": "#3B82F6",
          "color": "#FFFFFF"
        },
        "secondary": {
          "backgroundColor": "#10B981",
          "color": "#FFFFFF"
        },
        "text": {
          "backgroundColor": "transparent",
          "color": "#3B82F6"
        },
        "support": {
          "backgroundColor": "#3B82F6",
          "color": "#FFFFFF",
          "width": "100%"
        }
      }
    },
    "input": {
      "backgroundColor": "#F9FAFB",
      "border": "1px solid #D1D5DB",
      "borderRadius": "8px",
      "padding": "10px 14px",
      "fontSize": "14px"
    },
    "navigation": {
      "item": {
        "padding": "10px 16px",
        "borderRadius": "8px",
        "iconSize": "20px",
        "states": {
          "default": {
            "color": "#6B7280"
          },
          "active": {
            "backgroundColor": "rgba(59, 130, 246, 0.1)",
            "color": "#2563EB",
            "fontWeight": 600
          },
          "hover": {
            "backgroundColor": "#F3F4F6"
          }
        }
      }
    },
    "charts": {
      "bar": {
        "borderRadius": "4px"
      },
      "donut": {
        "strokeWidth": "15px"
      }
    }
  },
  "patterns": {
    "dataDisplay": {
      "style": "Stat cards",
      "description": "Individual cards for key metrics, featuring a large value, a descriptive label, a percentage change, and a subtle icon.",
      "layout": "Often arranged in a responsive grid at the top of a dashboard."
    },
    "hierarchyAndSeparation": {
      "style": "Whitespace and subtle borders",
      "description": "Generous use of whitespace between elements and light grey borders or subtle shadows to define sections and cards, avoiding harsh lines."
    },
    "interactivity": {
      "style": "Clear affordances",
      "description": "Buttons and interactive elements have clear hover and active states. Links are distinctly colored. Icons are used to supplement text and provide quick visual cues."
    },
    "callToAction": {
      "style": "Prominent CTA card",
      "description": "A visually distinct card, often using a secondary or accent color as a background, to draw attention to important actions or information, like onboarding or documentation."
    }
  }
}
